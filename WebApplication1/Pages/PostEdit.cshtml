@page
@model WebApplication1.Pages.PostEditModel
@{
}

<style>
    input:focus {
        outline: none;
    }

    .fakeLink {
        border: 0px;
        background-color: #fff;
        color: #575a7b;
        cursor: hand;
        padding: 0;
    }

        .fakeLink:hover {
            color: #0a58ca;
            text-decoration: underline;
        }
</style>

<form method="post">
    <input asp-for="post_id" hidden>
    <input asp-for="title" type="text" class="fs-1 border-0" placeholder="Title" required>

    <div class="mt-3">
        <textarea asp-for="content" class="w-100 border shadow-sm form-control fs-5" rows="10"></textarea>
    </div>

    <hr />

    <div class="d-flex flex-row justify-content-between">
        <a href="/Posts">Cancel</a>
        <button class="fakeLink" asp-page-handler="Confirm">Confirm</button>
    </div>
</form>
